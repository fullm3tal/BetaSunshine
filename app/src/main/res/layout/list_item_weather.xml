<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/tv_weather_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="16dp" />

    <TextView
        android:id="@+id/tv_weather_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@id/tv_weather_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="WeatherDate" />

    <TextView
        android:id="@+id/tv_weather_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_weather_image"
        app:layout_constraintTop_toBottomOf="@id/tv_weather_date"
        tools:text="WeatherDescription" />

    <TextView
        android:id="@+id/tv_weather_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="24dp"
        app:layout_constraintLeft_toRightOf="@id/tv_weather_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="High" />

    <TextView
        android:id="@+id/tv_weather_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="24dp"
        app:layout_constraintLeft_toRightOf="@id/tv_weather_max"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Low" />


</android.support.constraint.ConstraintLayout>